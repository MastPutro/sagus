<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_foodName"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:text="Ayam Bakar"
            android:textColor="@color/black"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/tv_idFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0001"
            android:layout_below="@+id/tv_foodName"/>
        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/tv_foodName"
            android:text="x"
            android:textSize="20sp"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/tv_jumlah"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/x"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="3dp"/>
        <ImageButton
            android:id="@+id/bt_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_remove_circle_24"
            android:layout_toEndOf="@+id/tv_jumlah"
            android:layout_centerVertical="true"
            android:clickable="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>